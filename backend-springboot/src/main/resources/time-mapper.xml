<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wfl.mbtest.user.TimeMapper">

	<select id="getAll" resultType="time">
        SELECT TO_CHAR(TIME, 'YYYY-MM-DD HH24:MM') AS TIME FROM TIMETEST
	</select>
	
	<insert id="insertTime" parameterType="time"> 
        INSERT INTO TIMETEST (TIME) 
        	VALUES (#{time}) 
    </insert>
	
</mapper>